{
  "name": "arcade",
  "version": "0.0.1",
  "description": "Software stack for creating arcade and tournament sessions on-chain",
  "main": "./lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "test": "npm run lint && npm run cover",
    "test:prod": "cross-env BABEL_ENV=production npm run test",
    "test:only": "cd client && cross-env CI=true react-scripts test --coverage",
    "test:watch": "npm test -- --watch",
    "cover": "nyc --check-coverage npm run test:only",
    "lint": "eslint client/src/package",
    "package:build": "cross-env BABEL_ENV=production babel  --root-mode upward client/src/package --out-dir lib",
    "package:prepublish": "npm run clean && npm run lint && npm run test && npm run package:build",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "react:build": "cd client && npm run build",
    "dev:local": "npm run truffle:compile && npm run contracts:copy && concurrently --kill-others-on-fail \"npm run client\" \"npm run server\"",
    "heroku-postbuild": "cd client && npm install",
    "start": "node server.js",
    "truffle:compile": "truffle compile",
    "truffle:deploy": "truffle deploy",
    "truffle:test": "truffle test",
    "contracts:copy": "cp -a ./build/contracts/. ./client/src/contracts/ && create-index ./client/src/contracts -x json"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "bignumber.js": "^9.0.0",
    "dapparatus": "^1.0.74",
    "deepmerge": "^3.2.1",
    "express": "^4.17.1",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-scripts": "^3.0.1",
    "web3": "^1.0.0-beta.55"
  },
  "files": [
    "lib",
    "client/src/package"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polats/arcade.git"
  },
  "keywords": [
    "npm",
    "module",
    "node",
    "javascript",
    "react",
    "web3",
    "ethereum",
    "arcade",
    "tournament",
    "game"
  ],
  "author": "Paul Gadi <paul@alto.io> (https://polats.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/polats/arcade/issues"
  },
  "homepage": "https://github.com/polats/arcade#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-minify": "^0.5.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "concurrently": "^4.1.0",
    "create-index": "^2.4.0",
    "cross-env": "^5.1.3",
    "dotenv": "^8.0.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.2",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "mocha": "^6.1.3",
    "nodemon": "^1.19.1",
    "nyc": "^13.3.0",
    "openzeppelin-solidity": "^2.2.0",
    "react-test-renderer": "^16.8.6",
    "rimraf": "^2.6.2",
    "truffle": "^5.0.24",
    "truffle-assertions": "^0.9.1",
    "truffle-hdwallet-provider": "1.0.5"
  },
  "proxy": "http://localhost:5000/",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
